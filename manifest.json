{
  "manifest_version": 2,
  "version": "4.0",
  "name": "__MSG_extTitle__",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"

  },
  "default_locale": "en",
  "permissions": [ "http://*/*", "https://*/*" ],
  "incognito": "split",
  "offline_enabled": false,
  "background": {
    "scripts": [ "background.js" ]
  },
  "browser_action": {
    "default_title": "__MSG_extDescription__",
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      }
    }
  }
}
